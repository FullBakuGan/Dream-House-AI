@model Dream_House.Models.LoginViewModel
@{
    ViewData["Title"] = "Вход";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        html {
            position: relative;
            min-height: 100%;
            font-size: 14px;
        }



        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background-color: #DDDEBE;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: sans-serif;
        }

        header {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        a {
            text-decoration: none;
        }

        h1 {
            color: #435D00;
            font-size: 48px;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Registration */
        .container-registration {
            width: 568px;
            background-color: #9AA968;
            color: #FFFFFF;
            border-radius: 20px;
            padding: 40px 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .registration-form {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding-top: 80px;
            gap: 20px;
        }

        .auth-links {
            display: flex;
            justify-content: center;
            margin-bottom: 25px;
            border-bottom: 1px solid #eee;
        }

        .auth-link {
            padding: 10px 20px;
            text-decoration: none;
            color: #FFFFFF;
            font-weight: 500;
            font-size: 23px;
            transition: all 0.3s ease;
            position: relative;
            margin: 0 5px;
        }

        .auth-link:hover {
            color: #d2e93e;
        }

        .auth-link.active {
            color: #d2e93e;
            font-weight: 600;
        }

        .form-group-input {
            width: 441px;
            height: 58px;
            background-color: #C8D4A9;
            border: none;
            color: #FFFFFF;
            font-size: 20px;
            font-weight: bold;
            border-radius: 15px;
        }

        .registration-form > input:focus {
            background-color: #C8D4A9;
            outline: none;
        }

        ::placeholder {
            color: #435D00;
        }

        .submit-btn {
            width: 300px;
            height: 65px;
            background-color: #C8D4A9;
            color: #FFFFFF;
            border: none;
            border-radius: 60px;
            font-size: 23px;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: #7D8F4E;
        }

        .login-link {
            text-align: center;
            margin-top: 25px;
            color: #FFFFFF;
            font-size: 14px;
        }

        .login-link a {
            color: #d2e93e;
            text-decoration: none;
            font-weight: 500;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #FFFFFF;
            font-size: 14px;
            font-weight: 500;
        }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container-registration">
        <h1>DREAM HOUSE</h1>

        <form asp-action="Login" method="post" class="registration-form">
            @Html.AntiForgeryToken()

            <div class="auth-links">
                <a class="auth-link active" asp-controller="Account" asp-action="Login">Войти</a>
                <a class="auth-link" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Почта</label>
                <input asp-for="Email" class="form-group-input" placeholder="Почта" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" type="password" class="form-group-input" placeholder="Пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-btn">Войти</button>
        </form>

        <div class="login-link">
            Нет аккаунта? <a asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
        </div>
    </div>
</body>
</html>