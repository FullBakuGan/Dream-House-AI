@{
    ViewData["Title"] = "Чат-бот";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        #chatBox {
            border: 1px solid #ccc;
            padding: 10px;
            height: 300px;
            overflow-y: auto;
            margin-bottom: 10px;
            background-color: #f9f9f9;
            border-radius: 5px;
        }

        #userInput {
            width: 80%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        #sendBtn {
            padding: 8px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            #sendBtn:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <h2>Чат-бот</h2>

    <div id="chatBox"></div>

    <input type="text" id="userInput" placeholder="Введите ваше сообщение..." />
    <button id="sendBtn">Отправить</button>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Отправка по клику на кнопку
            $('#sendBtn').click(sendMessage);

            // Отправка по нажатию Enter
            $('#userInput').keypress(function (e) {
                if (e.which == 13) {
                    sendMessage();
                }
            });

            function sendMessage() {
                var message = $('#userInput').val().trim();
                if (message === "") return;

                $('#chatBox').append('<div><b>Вы:</b> ' + message + '</div>');
                $('#userInput').val('');

                // Показываем индикатор загрузки
                $('#chatBox').append('<div id="loading">Бот печатает...</div>');
                $('#chatBox').scrollTop($('#chatBox')[0].scrollHeight);

                $.post('/Chat/SendMessage', { message: message }, function (data) {
                    $('#loading').remove();
                    $('#chatBox').append('<div><b>Бот:</b> ' + data.reply + '</div>');
                    $('#chatBox').scrollTop($('#chatBox')[0].scrollHeight);
                }).fail(function () {
                    $('#loading').remove();
                    $('#chatBox').append('<div style="color:red;">Ошибка при получении ответа от бота</div>');
                    $('#chatBox').scrollTop($('#chatBox')[0].scrollHeight);
                });
            }
        });
    </script>
</body>
</html>